generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum QuoteStatus {
  DRAFT // draft
  SENT // sent to client
  ACCEPTED // client accepted/signed
  REJECTED // client rejected
  EXPIRED // expired
}

enum Role {
  ADMIN
  CONSULTANT
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(CONSULTANT)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(3)

  // RELATION ADDED: List of quotes created by this user
  quotes Quote[]

  // RELATION ADDED: List of integrations connected by this user
  integrations Integration[]

  @@map("users")
}

model Client {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  document String?
  phone    String?
  address  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @db.Timestamptz(3)

  // relation: one client has many quotes
  quotes Quote[]

  @@map("clients")
}

// ------------------------------------------------------
// catalog (Product and Services)
// ------------------------------------------------------

model Product {
  id          String  @id @default(uuid())
  name        String
  description String?
  price       Decimal @default(0) @db.Decimal(10, 2) // Ex: 999.90
  sku         String? @unique // Stock Keeping Unit
  stock       Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @db.Timestamptz(3)

  // Reverse relation (optional, but useful to know where the product was used)
  productOptionals ProductOptional[]
  quoteItems       QuoteItem[]

  @@map("products")
}

model ProductOptional {
  id          String  @id @default(uuid())
  name        String // Ex: "Extended Warranty"
  description String?
  price       Decimal @db.Decimal(10, 2) // Additional value for this option
  selected    Boolean @default(false)

  // Belongs to which product?
  productId String?
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @db.Timestamptz(3)

  @@map("product_optionals")
}

model Service {
  id          String  @id @default(uuid())
  name        String
  description String?
  price       Decimal @default(0) @db.Decimal(10, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @db.Timestamptz(3)

  // Relation: A service has many available options
  serviceOptions ServiceOption[]
  quoteItems     QuoteItem[]

  @@map("services")
}

// NEW TABLE: Service Options (e.g., Plans, Add-ons)
model ServiceOption {
  id          String  @id @default(uuid())
  name        String // Ex: "Advanced AI Plan"
  description String?
  price       Decimal @db.Decimal(10, 2) // Additional value for this option
  selected    Boolean @default(false)

  // Belongs to which service?
  serviceId String
  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @db.Timestamptz(3)

  @@map("service_options")
}

// ------------------------------------------------------
// QUOTE (The Core of the Application)
// ------------------------------------------------------
model Quote {
  id String @id @default(uuid())

  // Control
  number     Int         @default(autoincrement()) // Friendly sequential number (e.g., Quote #1050)
  status     QuoteStatus @default(DRAFT)
  validUntil DateTime? // Quote validity date

  // Client
  clientId String
  client   Client @relation(fields: [clientId], references: [id])

  // Signature / Contract
  signedAt    DateTime? // Date of signature
  signatureIp String? // IP of the signer (legal security)
  notes       String? // General observations

  // Totals
  totalValue Decimal @default(0) @db.Decimal(10, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @db.Timestamptz(3)

  // Quote items
  items  QuoteItem[]
  user   User?       @relation(fields: [userId], references: [id])
  userId String?

  @@map("quotes")
}

// ------------------------------------------------------
// QUOTE ITEMS (Pivot Table)
// ------------------------------------------------------

model QuoteItem {
  id String @id @default(uuid())

  quoteId String
  quote   Quote  @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  productId String?
  product   Product? @relation(fields: [productId], references: [id])

  serviceId String?
  service   Service? @relation(fields: [serviceId], references: [id])

  // --- SNAPSHOT (The print of the sale) ---
  description String
  quantity    Int     @default(1)
  unitPrice   Decimal @db.Decimal(10, 2)
  total       Decimal @db.Decimal(10, 2)

  // Snapshot das opções selecionadas (Product Optionals ou Service Options)
  selectedOptions Json?

  @@map("quote_items")
}

// ------------------------------------------------------
// INTEGRATIONS (Third-party OAuth integrations)
// ------------------------------------------------------
model Integration {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  provider       String // "conta-azul", "stripe", "shopify", etc
  providerUserId String // ID único do usuário no provedor

  accessToken          String
  refreshToken         String?
  accessTokenExpiresAt DateTime

  metadata Json? // Dados específicos do provedor

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @db.Timestamptz(3)

  @@unique([userId, provider]) // Um usuário, um provider
  @@index([provider])
  @@map("integrations")
}
