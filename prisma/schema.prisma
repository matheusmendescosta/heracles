generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum QuoteStatus {
  DRAFT // draft
  SENT // sent to client
  ACCEPTED // client accepted/signed
  REJECTED // client rejected
  EXPIRED // expired
}

enum Role {
  ADMIN
  CONSULTANT
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(CONSULTANT)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // RELATION ADDED: List of quotes created by this user
  quotes Quote[]

  @@map("users")
}

model Client {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  document String?
  phone    String?
  address  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation: one client has many quotes
  quotes Quote[]

  @@map("clients")
}

// ------------------------------------------------------
// catalog (Product and Services)
// ------------------------------------------------------

model Product {
  id          String  @id @default(uuid())
  name        String
  description String?
  price       Decimal @db.Decimal(10, 2) // Ex: 999.90
  sku         String? @unique // Stock Keeping Unit
  stock       Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Reverse relation (optional, but useful to know where the product was used)
  quoteItems QuoteItem[]

  @@map("products")
}

model Service {
  id          String  @id @default(uuid())
  name        String
  description String?
  price       Decimal @db.Decimal(10, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation: A service has many available options
  options ServiceOption[]

  quoteItems QuoteItem[]

  @@map("services")
}

// NEW TABLE: Service Options (e.g., Plans, Add-ons)
model ServiceOption {
  id          String  @id @default(uuid())
  name        String // Ex: "Advanced AI Plan"
  description String?
  price       Decimal @db.Decimal(10, 2) // Additional value for this option

  // Belongs to which service?
  serviceId String
  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("service_options")
}

// ------------------------------------------------------
// QUOTE (The Core of the Application)
// ------------------------------------------------------
model Quote {
  id String @id @default(uuid())

  // Control
  number     Int         @default(autoincrement()) // Friendly sequential number (e.g., Quote #1050)
  status     QuoteStatus @default(DRAFT)
  validUntil DateTime? // Quote validity date

  // Client
  clientId String
  client   Client @relation(fields: [clientId], references: [id])

  // Signature / Contract
  signedAt    DateTime? // Date of signature
  signatureIp String? // IP of the signer (legal security)
  notes       String? // General observations

  // Totals
  totalValue Decimal @default(0) @db.Decimal(10, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Quote items
  items  QuoteItem[]
  user   User?       @relation(fields: [userId], references: [id])
  userId String?

  @@map("quotes")
}

// ------------------------------------------------------
// QUOTE ITEMS (Pivot Table)
// ------------------------------------------------------

model QuoteItem {
  id String @id @default(uuid())

  quoteId String
  quote   Quote  @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  productId String?
  product   Product? @relation(fields: [productId], references: [id])

  serviceId String?
  service   Service? @relation(fields: [serviceId], references: [id])

  // --- SNAPSHOT (The print of the sale) ---
  description String
  quantity    Int     @default(1)
  unitPrice   Decimal @db.Decimal(10, 2)

  // NEW FIELD: Details of the selected options
  // Here we will save a JSON with the selected options for this item.
  // Example JSON structure:
  // [
  //   { "name": "Advanced AI Plan", "price": 500.00 },
  //   { "name": "Dedicated Server", "price": 200.00 }
  // ]
  selectedOptions Json?

  total Decimal @db.Decimal(10, 2)

  @@map("quote_items")
}
